{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make compile",
            "type": "shell",
            "command": "make compile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$erlang"
        },
        {
            "label": "copy src",
            "type": "shell",
            "command": "cp -r src/ ut/",
            "problemMatcher": "$erlang"
        },
        {
            "label": "rm src",
            "type": "shell",
            "command": "rm -fr ut/src/",
            "problemMatcher": "$erlang"
        }
    ]
}